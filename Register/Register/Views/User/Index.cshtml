@model System.Collections.Generic.IEnumerable<Register.Models.UserU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<section class="content-header">
    <h1>
        User
        <small>User details</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> User</a></li>
        <li class="active">User details</li>
    </ol>
</section>

<section class="content">
    <div class="box box-default">
        <div class="box-body">
            <div class="row">
                <div class="col-lg-12 btn-container-right">
                    <div>
                        <div class="btn-group">
                            @using (Html.BeginForm("Create", "User", FormMethod.Get))
                            {
                                <button type="submit" class="btn btn-primary">&nbsp;&nbsp;New&nbsp;&nbsp;</button>
                                <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Home")'"> Cancel  </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>












    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">User Details</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>



        <div class="box-body">
            <div class="row form-group">
                <div class="col-xs-12">
                    <table class="table table-bordered table-hover table-striped Dtable">
                        <thead>
                            <tr>
                                <th></th>
                                <th>
                                    NIC
                                </th>
                                <th>
                                    Username
                                </th>
                                <th>
                                    First Name
                                </th>
                                <th>
                                    Last Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Tel No
                                </th>


                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs glyphicon glyphicon-edit", title = "Edit User" })
                                @Html.ActionLink(" ", "UserRoles", new { id = item.Id, username = item.Username }, new { @class = "btn btn-info btn-xs glyphicon glyphicon-wrench", title = "Change Roles" })
                                @Html.ActionLink(" ", "EditPassword", new { id = item.Id }, new { @class = "btn btn-danger btn-xs glyphicon glyphicon glyphicon-user", title = "Change Password" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NIC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tel)
                            </td>

                        </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

